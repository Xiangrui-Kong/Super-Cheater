      scanf（“％d％d％d”，＆a，＆b，＆c）;
	  max = ab;
      如果（最大<0）
     {
      max = b; // max = 7
      min = a; // min = 5
      }
      其他
     {
      max = a;
      min = b;
      }
      bigest = max-c; // bigest = 7-6
      如果（最大<0）
     {bigest = c;}
      else // bigest = 7
     {bigest = max;
      zuixiao = min-c;} // zuixiao = 5-6
      如果（zuixiao <0） 
      {zuixiao = min; // zuixiao = 5
      max = c;}
      其他
     {zuixiao = c;
      max = min;}
